<%= render 'list', booke: @books %>

      <div class="col-md-8 offset-md-1">
  		  <h2>Book detail</h2>
  		    <table class="table">
  		      <tbody>
              <tr>
                <td>
                  <a href="/users/<%= @book.user.id %>">
                  <%= image_tag @book.user.get_profile_image(75,75) %>
                  <br>
                  <%= link_to @book.user.name, user_path(@book.user) %>
                  </a>
                </td>
                  <td>
                    <a href="/books/<%= @book.id %>"><%= @book.title %></a>
                  </td>
                  <td><%= @book.body %></td>
                  <td><a class="btn btn-sm btn-success edit_book_<%= @book.id %>" href="/books/<%= @book.id %>/edit">Edit</a></td>
                  <td><a data-confirm="本当に消しますか？" class="btn btn-sm btn-danger destroy_book_<%= @book.id %>" rel="nofollow" data-method="delete" href="/books/<%= @book.id %>">Destroy</a></td>
              </tr>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</main>