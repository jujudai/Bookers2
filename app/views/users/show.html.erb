<%= render 'list', book: @book, user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <a href="/users/<%= book.user.id %>">
                    <%= image_tag book.user.get_profile_image(75,75) %>
                  </a>
                </td>
                <td><a href="/books/<%= book.id %>"><%= book.title %></a></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>